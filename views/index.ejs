<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="/img/favicon.png">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>URL SHORTENER</title>
</head>

<body class="bg-secondary">
    <div class="container">
        <h1 class="m-5" style="text-align: center;">URL SHORTENER</h1>
        <form class="my-4 form-inline" id="myForm">
            <label for="url" class="sr-only">URL</label>
            <input placeholder="URL" required type="url" name="url" id="url" class="form-control col mr-2">
            <label for="slug" class="sr-only">SLUG</label>
            <input placeholder="SLUG(Optional)" type="text" name="slug" id="slug" class="form-control mr-2">
            <button type="submit" class="btn btn-success" id="submitBtn">Shorten</button>
        </form>

        <table class="table table-striped table-dark table-hover table-responsive-sm w-100">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url,i) => { %>
                <tr data-id="<%= url._id %> ">
                    <th><%= i+1 %> </th>
                    <td><a href="<%= url.fullURL %>"><%= url.fullURL %></a></td>
                    <td><a href="<%= url.slug %>" target="_blank" class="slugUrl"><%= url.slug %></a></td>
                    <td><%= url.clicks %></td>
                    <td>
                        <li class="list-inline-item">
                            <button class="btn text-danger deleteBtn" type="button"><i
                                    class="fa fa-times-circle"></i></button>
                        </li>
                    </td>
                </tr>
                <% }) %>

            </tbody>
        </table>
    </div>
    <script type="text/javascript" src="/js/bundle.js"></script>
</body>

</html>